sudo vim /etc/systemd/system/tz.service
sudo cp tz /usr/local/bin/
sudo systemctl stop tz
sudo systemctl daemon-reload
sudo systemctl restart tz
sudo systemctl status tz
sudo journalctl -u tz -f

[Unit]
Description=Touchpad Zoom Daemon
After=network.target

[Service]
Environment=DISPLAY=:1
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus
User=sam
ExecStart=/usr/local/bin/tz
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=tz

[Install]
WantedBy=multi-user.target
